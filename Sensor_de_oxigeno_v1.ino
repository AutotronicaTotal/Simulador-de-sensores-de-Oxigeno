void setup(void)
{
  dac.begin(0x60);
  pinMode (BOTON_UP , INPUT_PULLUP);

  pinMode (LED_RED , OUTPUT);
  digitalWrite(LED_RED, LOW);

  pinMode (LED_GREEN , OUTPUT);
  digitalWrite(LED_GREEN, LOW);

  pinMode (LED_BLUE , OUTPUT);
  digitalWrite(LED_BLUE, LOW);
}

void loop(void)
{
  if (VALOR == MEZCLA_IDEAL)
  {
    digitalWrite(LED_RED, LOW);
    digitalWrite(LED_GREEN, HIGH);
    digitalWrite(LED_BLUE, LOW);

    for (i = 0; i < 256; i++)
    {
      dac.setVoltage(pgm_read_word(&(Mezcla_Ideal[i])), false); //7
      delay(7);
      //dac.setVoltage(pgm_read_word(&(Mezcla_Rica[i])), false); //7
      //dac.setVoltage(pgm_read_word(&(Mezcla_Pobre[i])), false); //7
      //dac.setVoltage(pgm_read_word(&(Sensor_Envejecido[i])), false); //6
      //dac.setVoltage(pgm_read_word(&(Sensor_Postcatalizador[i])), false); //2
      if (digitalRead(BOTON_UP) == LOW)
      {
        delay(RETARDO);
        VALOR++;
        break;
      }
    }
  }
  else if (VALOR == MEZCLA_RICA)
  {
    digitalWrite(LED_RED, HIGH);
    digitalWrite(LED_GREEN, LOW);
    digitalWrite(LED_BLUE, LOW);

    for (i = 0; i < 256; i++)
    {
      dac.setVoltage(pgm_read_word(&(Mezcla_Rica[i])), false); //7
      delay(7);

      if (digitalRead(BOTON_UP) == LOW)
      {
        delay(RETARDO);
        VALOR++;
        break;
      }
    }
  }
  else if (VALOR == MEZCLA_POBRE)
  {
    digitalWrite(LED_RED, LOW);
    digitalWrite(LED_GREEN, LOW);
    digitalWrite(LED_BLUE, HIGH);

    for (i = 0; i < 256; i++)
    {
      dac.setVoltage(pgm_read_word(&(Mezcla_Pobre[i])), false); //7
      delay(7);

      if (digitalRead(BOTON_UP) == LOW)
      {
        delay(RETARDO);
        VALOR++;
        break;
      }
    }
  }
  else if (VALOR == SENSOR_ENVEJECIDO)
  {
    digitalWrite(LED_RED, HIGH);
    digitalWrite(LED_GREEN, HIGH);
    digitalWrite(LED_BLUE, LOW);

    for (i = 0; i < 256; i++)
    {
      dac.setVoltage(pgm_read_word(&(Sensor_Envejecido[i])), false); //6
      delay(6);

      if (digitalRead(BOTON_UP) == LOW)
      {
        delay(RETARDO);
        VALOR++;
        break;
      }
    }
  }
  else if (VALOR == SENSOR_POSTCATALIZADOR)
  {

    digitalWrite(LED_RED, HIGH);
    digitalWrite(LED_GREEN, LOW);
    digitalWrite(LED_BLUE, HIGH);

    for (i = 0; i < 256; i++)
    {
      dac.setVoltage(pgm_read_word(&(Sensor_Postcatalizador[i])), false); //2
      delay(2);

      if (digitalRead(BOTON_UP) == LOW)
      {
        delay(RETARDO);
        VALOR++;
        break;
      }
    }
  }
  else
  {
    VALOR = 1;
  }
}
